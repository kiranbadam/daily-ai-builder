# ============================================
# RoboDevLoop Configuration
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Required — GitHub Personal Access Token
GITHUB_TOKEN=ghp_xxxxx

# Git identity (used for commits)
GIT_USER_NAME=yourname
GIT_USER_EMAIL=you@example.com

# Auth mode — choose one:
#   Option A: Leave blank and use Claude Max (subscription, requires interactive login)
#   Option B: Set your Anthropic API key (no login needed)
ANTHROPIC_API_KEY=

# Ship mode — how RoboDevLoop delivers code:
#   "push" = direct push to main (default)
#   "pr"   = open a pull request for review
SHIP_MODE=push

# Build schedule — when RoboDevLoop runs:
#   "daily"       = 5 AM Pacific (default)
#   "twice-daily" = 5 AM + 5 PM Pacific
#   "every-6h"    = every 6 hours
#   "hourly"      = every hour
#   Or any cron expression, e.g. "30 3 * * 1-5" for 3:30 AM weekdays
BUILD_SCHEDULE=daily

# Optional — webhook for notifications (Slack, Discord, etc.)
WEBHOOK_URL=

# Remote server SSH connection (used by deploy.sh)
DEPLOY_HOST=192.168.1.100
DEPLOY_USER=ubuntu
